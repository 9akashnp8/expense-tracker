{
  "exclude": ["./coverage", "./dist", "jest.config.js"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true, // fix ts-jest TS151001
  
    // For TypeORM
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*"],
}